<h2>ログイン画面</h2>

<%= form_tag '/tlogins/login', method: :post do %>
    <%= label_tag :uid, 'ユーザー名：' %>
    <%= text_field_tag :uid %></br>
    <%= label_tag :pass, 'パスワード：' %>
    <%= password_field_tag :pass %></br>
    <%= submit_tag 'ログイン' %>
<% end %>

<%= link_to "Topへ戻る", tsignups_path %></br>