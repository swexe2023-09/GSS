<style>
    @import url('https://fonts.googleapis.com/css2?family=Caveat:wght@700&family=Kiwi+Maru&display=swap');
</style>

<div class="tasks">
    
    <div class="tasks_title">
        <h1>マネージャーページ</h1>
    </div>
    
    
    <div class="tasks_column">
        <% @tasks.each do |e| %>
            <p>
                <%= e.job %>/<%= e.name %>/<%= e.date %>
                <%=link_to '表示', "/tasks/#{e.id}"%>
                <%=link_to '編集', "/tasks/#{e.id}/edit"%>
                <%=link_to '削除', "/tasks/#{e.id}" , data: { turbo_method: :delete },method: :delete %>
            </p>
        <% end %>
    </div></br>
    
    <%= link_to "メッセージ" ,group_chats_index_path, class: "tasks_button" %></br>
    <%= link_to "タスクを登録する" ,tasks_new_path, class: "tasks_button"  %></br>
    <%= link_to "ログアウト" ,mlogin_logout_path, class: "tasks_button"  %></br>
    
</div>